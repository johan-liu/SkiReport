<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="460px"
        android:layout_height="50px" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RLCommentListItemMain">
    <ImageView android:layout_width="10px" android:layout_height="50px" android:id="@+id/imgMark"
               android:scaleType="fitCenter" android:src="@drawable/progress_blue" android:layout_alignParentTop="false"
            />
    <TextView
            android:layout_width="250px"
            android:layout_height="50px"
            android:id="@+id/txtComment" android:layout_marginLeft="10px" android:gravity="center_vertical"
            android:textColor="#FFFFFF" android:textSize="18px" android:ellipsize="end" android:lines="2"
            android:layout_toRightOf="@+id/imgMark"/>
    <TextView android:layout_width="80px" android:layout_height="50px"
              android:id="@+id/txtDate" android:layout_marginLeft="10px" android:gravity="center_vertical|right"
              android:textColor="#FFFFFF" android:textSize="14px" android:ellipsize="end" android:lines="2"
              android:layout_toRightOf="@+id/txtComment"/>
    <TextView android:layout_width="100px" android:layout_height="50px"
              android:id="@+id/txtUserInfo" android:layout_marginLeft="5px" android:gravity="center_vertical|left"
              android:textColor="#FFFFFF" android:textSize="14px" android:ellipsize="end" android:lines="2"
              android:layout_toRightOf="@+id/txtDate"/>
</RelativeLayout>